{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Application.Services.SwapiFacade": "Debug",
      "Infrastructure.SwapiClient": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Application.Services.SwapiFacade": "Debug",
        "Infrastructure.SwapiClient": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:8100"
    ]
  },
  "SwapiClient": {
    "BaseUrl": "https://swapi.dev/api/",
    "TimeoutSeconds": 30,
    "UseFakeData": false
  }
}
